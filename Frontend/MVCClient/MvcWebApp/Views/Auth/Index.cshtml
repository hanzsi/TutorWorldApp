
@{
    ViewBag.Title = "Login";
}

<h2>Index</h2>

@using(Html.BeginForm("Login", "Auth", FormMethod.Post, new { @class="form-horizontal" }))
{
    <div class="form-group">
        <label class="control-label">Email</label>
        <input type="text" name="email" required="1" class="form-control" />
